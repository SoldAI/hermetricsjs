{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "allowJs": true,
        "target": "es6",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true, 
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [ "./node_modules/@types"] 
    },
    "include": [
        "./src/**/*.ts",
        "./*.ts"
    ],
    "exclude": [
        "tests/*.test.ts",
        "./node_modules"
    ]
}